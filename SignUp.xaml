<Page x:Class="Project_PRN212.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_PRN212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="Sign Up" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="4" HorizontalAlignment="Center" Margin="0,40,0,50"/>
        <TextBlock Text="Register as a parent of student" FontSize="14" Grid.ColumnSpan="4" HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- Full Name -->
        <TextBlock Text="Full Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Width="200" Height="30" Margin="0,10,0,10" Name="txtName"/>

        <!-- Email -->
        <TextBlock Text="Email" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="3" Width="200" Height="30" Margin="0,10,0,10" Name="txtEmail"/>

        <!-- Mobile -->
        <TextBlock Text="Mobile" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,0,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Width="200" Height="30" Margin="0,10,0,10" Name="txtMobile"/>

        <!-- Address -->
        <TextBlock Text="Address" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,0,0"/>
        <TextBox Grid.Row="2" Grid.Column="3" Width="200" Height="30" Margin="0,10,0,10" Name="txtAddress"/>

        <!-- Username -->
        <TextBlock Text="Username" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" Width="200" Height="30" Margin="0,10,0,10" Name="txtUsername"/>

        <!-- Password -->
        <TextBlock Text="Password" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,0,0"/>
        <PasswordBox Grid.Row="3" Grid.Column="3" Width="200" Height="30" Margin="0,10,0,10" Name="txtPassword"/>

        <!-- Class -->
        <TextBlock Text="Class" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,0,0"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Width="200" Height="30" Margin="0,10,0,10" Name="cbClass" SelectionChanged="cbClass_SelectionChanged"/>

        <!-- Student -->
        <TextBlock Text="Student" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0,0,0"/>
        <ComboBox Grid.Row="4" Grid.Column="3" Width="200" Height="30" Margin="0,10,0,10" Name="cbStudent" Visibility="Hidden"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Sign Up" Width="120" Height="40" Background="LightSeaGreen" Foreground="White" Margin="10" Click="SignUp_Click"/>
            <Button Content="Back to Login" Width="131" Height="40" Background="Red" Foreground="White" Margin="10" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Page>
