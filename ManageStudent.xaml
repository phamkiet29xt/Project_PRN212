<Page x:Class="Project_PRN212.ManageStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_PRN212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageStudent">

    <Grid Background="White">
        <!-- Header -->
        <Border Background="#24B29B" Height="60" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Manage Dish" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Dish_Click"/>
                <Button Content="Manage Staff" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Staff_Click"/>
                <Button Content="Manage Student" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110"/>
                <Button Content="User Account" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="UserAccount_Click"/>
                <Button Content="Logout" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Logout_Click"/>
            </StackPanel>
        </Border>

        <!-- Form Section -->
        <StackPanel Margin="50,80,50,0">
            <TextBlock Text="Manage Student" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <TextBox Grid.Row="0" Grid.Column="1" Height="25" Margin="0,0,0,5" Name="txtName"/>

                <TextBlock Text="Birthdate" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
                <DatePicker Grid.Row="1" Grid.Column="1" Height="25" Margin="0,0,0,5" Name="dpBirthdate"/>

                <TextBlock Text="Gender" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <RadioButton x:Name="rbMale" Margin="5,0,5,5" GroupName="Gender" Content="Male"/>
                    <RadioButton x:Name="rbFemale" Content="Female" Margin="10,0,10,5" GroupName="Gender"/>
                </StackPanel>

                <TextBlock Text="Class" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
                <ComboBox Grid.Row="3" Grid.Column="1" Height="25" Margin="0,0,0,5" Name="cbClass"/>

                <TextBlock Text="Parent" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Grid.Row="4" Grid.Column="1" Height="25" Margin="0,0,0,5" Name="txtParent"/>

                <TextBlock Text="Search by student name" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Grid.Row="5" Grid.Column="1" Height="25" Margin="0,0,0,5"  Name="txtSearch"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="0" Grid.RowSpan="6" Grid.Column="2" VerticalAlignment="Center">
                    <Button Content="Add" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="15,5,5,5" Click="Add_Click"/>
                    <Button Content="Update" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="15,5,5,5" Click="Update_Click"/>
                    <Button Content="Refresh" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="15,5,5,5" Click="Refresh_Click"/>
                    <Button Content="Delete" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="15,5,5,5" Click="Delete_Click"/>
                    <Button Content="Search" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="15,5,5,5" Click="Search_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid Margin="50,350,50,50" AutoGenerateColumns="False" HeadersVisibility="Column" Name="dgStudentList" SelectionChanged="dgStudentList_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Birthdate" Binding="{Binding Birthdate}" Width="150"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                <DataGridTextColumn Header="Class" Binding="{Binding Class}" Width="100"/>
                <DataGridTextColumn Header="Parent" Binding="{Binding Parent}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
