<Page x:Class="Project_PRN212.ManageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_PRN212"
      mc:Ignorable="d" d:DesignWidth="900"
      Title="Menu" Height="550">

    <Grid Background="White">
        <!-- Header -->
        <Grid Background="#50C4A3" Height="50" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Profile" Background="#A259D0" Foreground="White" Padding="10" Width="120" Height="40" Margin="0,0,10,0" FontWeight="Bold"/>
                <Button Content="Manage Menu" Background="#A259D0" Foreground="White" Padding="10" Margin="0,0,10,0" Width="120" FontWeight="Bold"/>
                <Button Content="Manage Dish" Background="#A259D0" Foreground="White" Padding="10" Margin="0,0,10,0" Width="120" FontWeight="Bold" Click="ManageDish_Click"/>
                <Button Content="Logout" Background="#A259D0" Foreground="White" Padding="10" Width="120" FontWeight="Bold" Click="Logout_Click"/>
            </StackPanel>
        </Grid>

        <StackPanel Margin="10,60,10,10" Background="White">
            <TextBlock Text="Manage Menu" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Grid Background="White" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Dish List Section -->
                <StackPanel Grid.Column="0" Background="#FDF7D6"  Margin="0,5,10,5">
                    <StackPanel.Effect>
                        <DropShadowEffect/>
                    </StackPanel.Effect>
                    <TextBlock Text="Dish List" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Search by dish name" VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
                        <TextBox Width="200" Name="txtSearch" Margin="5,0,0,0"/>
                        <Button Content="Search" Background="#A259D0" Foreground="White" Width="80" Margin="5,0,0,0" Click="Search_Click"/>
                    </StackPanel>

                    <DataGrid AutoGenerateColumns="False" Height="200" Background="White" Name="dgDish" Margin="10,10,10,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Dish" Binding="{Binding Name}" Width="160"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Decription}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Content="Add" Background="#A259D0" Foreground="White" Width="80" HorizontalAlignment="Center" Margin="10,20,10,10" FontWeight="Bold" Click="AddDish_Click"/>
                </StackPanel>

                <!-- Menu Section -->
                <StackPanel Grid.Column="1" Background="#FDF7D6" Margin="5">
                    <StackPanel.Effect>
                        <DropShadowEffect/>
                    </StackPanel.Effect>
                    <TextBlock Text="MENU" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Date" FontWeight="Bold" Width="80" Margin="5,0,0,0"/>
                            <DatePicker Name="dpDate" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Meal time" FontWeight="Bold" Width="80" Margin="5,0,0,0"/>
                            <ComboBox Width="200" Name="cbMealTime"/>
                        </StackPanel>
                    </StackPanel>

                    <DataGrid AutoGenerateColumns="False" Height="200" Background="White" Name="dgMenu" Margin="10,0,10,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Dish" Binding="{Binding Name}" Width="160"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Content="Save" Background="#A259D0" Foreground="White" Width="80" Margin="5" FontWeight="Bold" Click="Save_Click"/>
                        <Button Content="View" Background="#A259D0" Foreground="White" Width="80" Margin="5" FontWeight="Bold" Click="View_Click"/>
                        <Button Content="Refresh" Background="#A259D0" Foreground="White" Width="80" Margin="5" FontWeight="Bold" Click="Refresh_Click"/>
                        <Button Content="Delete" Background="#A259D0" Foreground="White" Width="80" Margin="5" FontWeight="Bold" Click="DeleteDish_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>

</Page>
