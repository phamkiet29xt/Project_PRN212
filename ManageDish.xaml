<Page x:Class="Project_PRN212.ManageDish"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_PRN212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageDish">

    <Grid Background="White">
        <Border Background="#24B29B" Height="60" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Manage Dish" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" />
                <Button Content="Manage Staff" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Staff_Click"/>
                <Button Content="Manage Student" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Student_Click"/>
                <Button Content="User Account" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="UserAccount_Click"/>
                <Button Content="Logout" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Logout_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
