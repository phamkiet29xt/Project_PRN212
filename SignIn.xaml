<Page x:Class="Project_PRN212.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_PRN212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignIn">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Sign Up Section -->
        <Grid Background="Teal">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Sign Up" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Create new account" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                <Button Content="Sign Up" Width="120" Height="40" Background="White" Foreground="Black" Margin="10" 
                    Click="SignUp_Click"/>
            </StackPanel>
        </Grid>

        <!-- Sign In Section -->
        <Grid Grid.Column="1" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Boarding Meal Management System" FontSize="18" FontWeight="Bold" Foreground="Teal" HorizontalAlignment="Center"/>
                <TextBlock Text="Sign In" FontSize="24" FontWeight="Bold" Foreground="Teal" HorizontalAlignment="Center" Margin="10"/>

                <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0 5 0 5" VerticalAlignment="Center">
                        <TextBlock Text="Username" FontSize="14" FontWeight="Bold" Width="80" VerticalAlignment="Center"/>
                        <TextBox Width="200" Height="30" Name="txtUsername"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 5 0 5" VerticalAlignment="Center">
                        <TextBlock Text="Password" FontSize="14" FontWeight="Bold" Width="80" VerticalAlignment="Center"/>
                        <PasswordBox Width="200" Height="30" Name="txtPassword"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Sign In" Width="100" Height="40" Background="LightSeaGreen" Foreground="White" Margin="5" 
                        Click="SignIn_Click"/>
                    <Button Content="Forgot password" Width="140" Height="40" Background="DarkRed" Foreground="White" Margin="5" 
                        />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
