<Page x:Class="Project_PRN212.Order"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_PRN212"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Order">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#48C9B0" Padding="10" Grid.Row="0">
            <TextBlock Text="WELCOME TO MEAL MANAGEMENT SYSTEM" 
                       FontSize="20" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="1" Margin="10">
            <!-- Date and Meal Time Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Text="Date" FontWeight="Bold" VerticalAlignment="Center"/>
                <DatePicker Width="150" Margin="10,0,20,0" Name="dpDate"/>
                <TextBlock Text="Meal Time" FontWeight="Bold" VerticalAlignment="Center"/>
                <ComboBox Width="150" Margin="10,0,0,0" Name="cbMealTime"/>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Menu Section -->
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Grid.Column="0" Background="#EAEDED" Margin="0,50,10,0">
                    <StackPanel>
                        <TextBlock Text="MENU" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,10,10">
                            <Label Content="Search by dish" FontWeight="Bold" />
                            <TextBox Width="180" />
                            <Button Content="Search" Background="#5C6BC0" Foreground="White" Margin="10,0,0,0" Width="60" Height="20"/>
                        </StackPanel>
                        <DataGrid AutoGenerateColumns="False" Name="dgMenu" Margin="10,10,10,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Dish" Width="110" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Description" Width="130" Binding="{Binding Decription}"/>
                                <DataGridTextColumn Header="Price" Width="70" Binding="{Binding Price}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Add" Background="Green" Foreground="White" Margin="5" Width="80" Height="24" HorizontalAlignment="Right" Click="Add_Click"/>
                            <Button Content="View" Background="Green" Foreground="White" HorizontalAlignment="Right" Margin="5" Width="80" Height="24" Click="View_Click"/>
                            <Button Content="Refresh" Background="Green" Foreground="White" HorizontalAlignment="Right" Margin="5" Width="80" Height="24" Click="Refresh_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Payment Section -->
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Grid.Column="1" Background="#EAEDED" Margin="10,48,0,0">
                    <StackPanel>
                        <TextBlock Text="Registration" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <DataGrid AutoGenerateColumns="False" Height="150" Width="380" Name="dgRegistration">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Dish" Width="150" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Price" Width="90" Binding="{Binding Price}"/>
                                <DataGridTemplateColumn Header="Action" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Delete" Background="Red" Foreground="White" Click="Delete_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Register" Background="Green" Foreground="White" HorizontalAlignment="Right" Margin="5,10,5,5" Width="80" Height="23"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Bottom Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,40,20,20" Height="60">
                <Button Content="Profile" Background="#5C6BC0" Foreground="White" Width="150" Margin="10"/>
                <Button Content="Change password" Background="#9C27B0" Foreground="White" Width="150" Margin="10" Click="ChangePassword_Click"/>
                <Button Content="Logout" Background="#D32F2F" Foreground="White" Width="150" Margin="10" Click="Logout_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
