<Page x:Class="Project_PRN212.ChangePassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_PRN212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePassword">

    <Grid Background="White">
        <!-- Header -->
        <Border Background="#3FC1AA" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Change Password" Foreground="White" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Form Container -->
        <Border Background="#FBFBEF" Padding="30" Width="482" Height="250"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                CornerRadius="10" BorderBrush="LightGray" BorderThickness="1">
            <Grid Margin="0,0,0,-52">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Old Password -->
                <TextBlock Text="Old password" FontWeight="Bold" VerticalAlignment="Center"
                           Grid.Row="0" Grid.Column="0" Margin="0,10,10,10" HorizontalAlignment="Center"/>
                <PasswordBox Width="200" Height="30" Background="LightGray" 
                             Grid.Row="0" Grid.Column="1" Margin="53,10,54,10" Name="txtOldPassword"/>

                <!-- New Password -->
                <TextBlock Text="New password" FontWeight="Bold" VerticalAlignment="Center"
                           Grid.Row="1" Grid.Column="0" Margin="0,10,10,10" HorizontalAlignment="Center"/>
                <PasswordBox Width="200" Height="30" Background="LightGray" 
                             Grid.Row="1" Grid.Column="1" Margin="0,10,0,10" Name="txtNewPassword"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm password" FontWeight="Bold" VerticalAlignment="Center"
                           Grid.Row="2" Grid.Column="0" Margin="0,10,10,10" HorizontalAlignment="Center"/>
                <PasswordBox Width="200" Height="30" Background="LightGray" 
                             Grid.Row="2" Grid.Column="1" Margin="0,10,0,10" Name="txtConfirmPassword"/>
            </Grid>
        </Border>
        <StackPanel Orientation="Horizontal" Margin="0,350,0,29" HorizontalAlignment="Center" Width="410">
            <Button Width="150" Height="40" Background="Green" Foreground="White"
            FontWeight="Bold"  Content="Save Changes" HorizontalAlignment="Center" Margin="50,0,20,0" Click="Save_Click"/>
            <Button Content="Back" Width="150" Height="40" Background="Red" Foreground="White" 
            FontWeight="Bold" HorizontalAlignment="Center" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
