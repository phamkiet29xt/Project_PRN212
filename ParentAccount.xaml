<Page x:Class="Project_PRN212.ParentAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_PRN212"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ParentAccount">

    <Grid Background="White">
        <Border Background="#24B29B" Height="60" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Manage Dish" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Dish_Click"/>
                <Button Content="Manage Staff" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Staff_Click"/>
                <Button Content="Manage Student" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Student_Click"/>
                <Button Content="User Account" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110"/>
                <Button Content="Logout" Background="#AB47BC" Foreground="White" Padding="10,5" Margin="5" Width="110" Click="Logout_Click"/>
            </StackPanel>
        </Border>
        <TextBlock Text="Manage parent account" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,60,0,363"/>

        <!-- Ô tìm kiếm -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="70,92,0,308" Width="450">
            <TextBlock Text="Search by parent name" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBox Width="200" Height="30" Margin="10,0,10,0" Name="txtSearch"/>
            <Button Content="Search" Width="80" Height="30" Margin="10,0,0,0" Background="MediumPurple" Foreground="White" Click="Search_Click"/>
        </StackPanel>

        <!-- Bảng hiển thị danh sách -->
        <DataGrid x:Name="dgParent" AutoGenerateColumns="False" 
                  HorizontalAlignment="Center" Margin="0,165,0,85">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút View Detail -->
        <Button Content="View Detail" Width="120" Height="30" Background="MediumPurple" Foreground="White"
                HorizontalAlignment="Right" Margin="612,388,20,32"/>
    </Grid>
</Page>
